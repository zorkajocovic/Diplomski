<Window x:Class="MovieUI.View.AddCinema"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieUI.View"
        mc:Ignorable="d"
        Title="Add Cinema" Height="384.023" Width="426.128">
    <Grid Height="345" VerticalAlignment="Top">
        <Label Content="Name:" HorizontalAlignment="Left" Margin="67,102,0,0" VerticalAlignment="Top"/>
        <Label Content="Place:" HorizontalAlignment="Left" Margin="67,162,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="168,102,0,0" TextWrapping="Wrap" Text="{Binding Cinema.Name}" VerticalAlignment="Top" Width="184"/>
        <ComboBox ItemsSource="{Binding Places}" SelectedIndex="{Binding SelectedPlace}" SelectedItem="{Binding Place}" HorizontalAlignment="Left" Margin="168,162,0,0" VerticalAlignment="Top" Width="184"/>
        <Button Command="{Binding AddCinema}" Content="add" HorizontalAlignment="Left" Margin="277,254,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
