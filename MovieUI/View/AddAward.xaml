<mah:MetroWindow
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="MovieUI.View.AddAward"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieUI.View"
        mc:Ignorable="d"
        Title="Add Award" Height="190.714" Width="419.787">
    <Grid>
        <Label Content="Name:" FontSize="16" HorizontalAlignment="Left" Margin="34,54,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="164,54,0,0" TextWrapping="Wrap" Text="{Binding Award.Name}" VerticalAlignment="Top" Width="220"/>
        <Button Command="{Binding AddAward}" Content="add" HorizontalAlignment="Left" Margin="309,115,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</mah:MetroWindow>
