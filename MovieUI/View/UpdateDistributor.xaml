<Controls:MetroWindow
    x:Class="MovieUI.View.UpdateDistributor"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieUI.View"
        mc:Ignorable="d"
        Title="Update Distributor" Height="252.068" Width="360.15">
    <Grid Margin="0,0,26,0">
        <TextBlock HorizontalAlignment="Left" Margin="50,66,0,0" TextWrapping="Wrap" Text="Title:" FontSize="20" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="131,71,0,0" TextWrapping="Wrap" Text="{Binding Distributor.Name}" VerticalAlignment="Top" Width="169"/>
        <Button Command="{Binding UpdateDistributor}" Content="Edit" HorizontalAlignment="Left" Margin="222,152,0,0" VerticalAlignment="Top" Width="81" Height="35" Background="#FF56D679"/>
        <TextBlock Text="{Binding Validacija}" Foreground="#FFD40707" TextAlignment="Center" HorizontalAlignment="Left" Margin="53,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" Height="21"/>

    </Grid>
</Controls:MetroWindow>
